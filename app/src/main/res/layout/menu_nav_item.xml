<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/nav_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/appbar_icon_height"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/appbar_icon_padding" />

    <in.dragons.custom.AppBarTextView
        android:id="@+id/nav_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="-5dp"
        android:text="TextView"
        android:textSize="@dimen/appbar_navigation_text_size" />
</LinearLayout>