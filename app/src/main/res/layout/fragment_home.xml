<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <in.dragons.galaxy.view.AdaptiveToolbar
        android:id="@+id/adtb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ToolbarStyle="Home" />

    <in.dragons.galaxy.view.CustomNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:background="?android:attr/colorPrimary"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/top_sections"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/appbar_bar_height">

            <in.dragons.galaxy.view.TopFreeApps
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:nestedScrollingEnabled="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <in.dragons.galaxy.view.TagView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6dp"
                    app:DualTagName0="Games"
                    app:DualTagName1="Featured"
                    app:TagStyle="Duo">

                </in.dragons.galaxy.view.TagView>

                <in.dragons.galaxy.view.TagView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    app:MonoTagName="Alpha"
                    app:TagStyle="Mono">

                </in.dragons.galaxy.view.TagView>

            </LinearLayout>

            <in.dragons.galaxy.view.MoreAppsCard
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:nestedScrollingEnabled="false"
                app:AppsCategory="MUSIC_AND_AUDIO"
                app:CardTitle="@string/category_topMusicVideo"
                app:JsonName="top_media" />

            <in.dragons.galaxy.view.MoreAppsCard
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:nestedScrollingEnabled="false"
                app:AppsCategory="TOOLS"
                app:CardTitle="@string/category_topUtility"
                app:JsonName="top_tools" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/google_sans_bold"
                android:text="@string/category_communityApps"
                android:textSize="18sp" />

            <in.dragons.galaxy.view.CommunityBasedApps
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:nestedScrollingEnabled="false" />

            <in.dragons.galaxy.view.TopFreeGames
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:nestedScrollingEnabled="false" />

            <in.dragons.galaxy.view.MoreAppsCard
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:nestedScrollingEnabled="false"
                app:AppsCategory="TOOLS"
                app:CardTitle="@string/category_fdroidApps"
                app:JsonName="fdroid_apps" />

        </LinearLayout>

    </in.dragons.galaxy.view.CustomNestedScrollView>

</android.support.design.widget.CoordinatorLayout>