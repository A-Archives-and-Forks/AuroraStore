<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/m_apps_layout"
    android:layout_width="110dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/m_apps_img"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:padding="4dp"
        app:srcCompat="@drawable/ic_placeholder" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m_apps_img"
        android:orientation="horizontal"
        android:padding="6dp">

        <RelativeLayout
            android:id="@+id/toprow"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/m_apps_name"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fontFamily="@font/google_sans_bold"
                android:maxLines="2"
                android:scrollHorizontally="false"
                android:textAlignment="textStart"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/menu_3dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:src="@drawable/ic_3dots" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toprow"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ratingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/google_sans"
                android:textSize="12sp" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ratingText"
                android:layout_centerVertical="true"
                android:isIndicator="true"
                android:max="1"
                android:numStars="1"
                android:scaleX=".5"
                android:scaleY=".5"
                android:theme="@style/RatingBar2" />

            <TextView
                android:id="@+id/app_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/ratingBar"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/google_sans"
                android:textAllCaps="true"
                android:textColor="?android:attr/colorAccent"
                android:textSize="12sp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>